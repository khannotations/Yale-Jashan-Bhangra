<head>
  <title><%=h yield(:title) %></title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= stylesheet_link_tag "jquery.fancybox" %>
  <%= stylesheet_link_tag "jquery.fancybox-thumbs" %>
  <link href='http://fonts.googleapis.com/css?family=Mako|Lato:100,400|Open+Sans:400,600,700,800,300' rel='stylesheet' type='text/css'>
  <link rel='icon' href='/assets/logo_notext.png'>
  <meta content='IE=edge,chrome=1' http-equiv='X-UA-Compatible'>
  <meta content='width=device-width, initial-scale=1, maximum-scale=2' name='viewport'>

  <%= javascript_include_tag "application" %>
  <!--
  <meta name="viewport" content="width=device-width, initial-scale = 1.0" />
  -->
  <meta property="og:title" content="Yale Jashan Bhangra" />
  <meta property="og:type" content="company" />
  <meta property="og:url" content="http://yale.edu/bhangra" />
  <meta property="og:image" content="http://yale.edu/bhangra/assets/logo_notext.png" />
  <meta property="og:site_name" content="Yale Jashan Bhangra" />
  <meta property="fb:admins" content="651881494" />
  <%= csrf_meta_tags %>
</head>
<body>
  <script>
    (function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=196239823792948";
    fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
  </script>
  <%= yield (:header) %>
  <div class="wrapper <%= yield(:body_class) %>">
    <div class='container'>
      <%= yield %>
    </div>
  </div>

</body>
</html>
